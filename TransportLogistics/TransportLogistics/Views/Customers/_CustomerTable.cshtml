@using TransportLogistics.Models.Customers;
@model CustomerListViewModel;

<div class="row d-flex justify-content-end mt-3 mb-3 mr-auto">
    <button class="btn-car" data-toggle="modal" data-target="#customerModal">New Customer <i class="fa fa-user"></i></button>
</div>

<table id="customersTable" class="table table-striped table-bordered" style="width:100%">
    <thead class="dropdown text-center">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var customer in Model.CustomerViews)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNo</td>

                <td class="dropdown text-center">
                    <button class="btn btn-blue dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Address Locations (@customer.LocationViews.Count())
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        @foreach (var location in customer.LocationViews)
                        {
                            <div class="dropdown-item">
                                @location.Country,
                                @location.City,
                                @location.Street,
                                @location.StreetNumber,
                                @location.PostalCode
                            </div>
                        }
                    </div>
                </td>

                <td style="max-width:20%">
                    <div class="d-flex justify-content-around">

                        <button class="btn btn-blue mr-1 ml-1" title="Add Location" data-toggle="modal"
                                onclick="LoadAddLocationView('@customer.Id');" data-target="#locationModal">
                            <i class="material-icons fa fa-plus"></i>
                        </button>

                        <button class="btn btn-outline-dark mr-1 ml-1" title="Edit" data-toggle="modal"
                                onclick="LoadUpdateCustomerView('@customer.Id');" data-target="#updateCustomerModal">
                            <i class="material-icons fa fa-edit"></i>
                        </button>

                        <button class="btn btn-outline-danger mr-1 ml-1" title="Delete" data-toggle="modal"
                                onclick="LoadRemoveCustomerView('@customer.Id');" data-target="#removeModal">
                            <i class="material-icons fa fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>