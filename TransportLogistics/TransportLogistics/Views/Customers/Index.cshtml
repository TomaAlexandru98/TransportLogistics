@model TransportLogistics.Models.Customers.CustomerListViewModel;
@{
    ViewData["Title"] = "Customers";
}

<link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/Responsive-2.2.3/css/responsive.bootstrap4.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/Responsive-2.2.3/css/responsive.dataTables.min.css" />

@section Scripts {
    <script type="text/javascript" src="~/lib/datatables/datatables.min.js"></script>
    <script type="text/javascript" src="~/lib/datatables/Responsive-2.2.3/js/dataTables.responsive.min.js"></script>
}

<script>
    $(document).ready(function () {
        $('#customersTable').DataTable({ responsive: true });
    });
</script>

<div class="row d-flex justify-content-end mt-3 mb-3">
    <button class="btn-car"><i class="fa fa-user"></i> New Customer</button>
</div>

<table id="customersTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Addresses</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var customer in Model.CustomerViews)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNo</td>
                <td class="row d-flex justify-content-around">
                    @customer.LocationViews.Count() <button><i class="fa fa-plus-square" href="#"></i> Details</button></td>
                
                @*
                @foreach (var address in customer.LocationViews)
                {
                    <td>@address.Country</td>
                    <td>@address.City</td>
                    <td>@address.Street</td>
                    <td>@address.StreetNumber</td>
                    <td>@address.PostalCode</td>
                }*@
            </tr>
        }
    </tbody>
</table>