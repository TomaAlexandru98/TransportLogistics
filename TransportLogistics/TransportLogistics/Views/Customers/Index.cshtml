@model TransportLogistics.Models.Customers.CustomerListViewModel;
@{
    ViewData["Title"] = "Customers";
}

<link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/Responsive-2.2.3/css/responsive.bootstrap4.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/Responsive-2.2.3/css/responsive.dataTables.min.css" />

@section Scripts {
    <script type="text/javascript" src="~/lib/datatables/datatables.min.js"></script>
    <script type="text/javascript" src="~/lib/datatables/Responsive-2.2.3/js/dataTables.responsive.min.js"></script>
}

<script>
    $(document).ready(function () {
        $('#customersTable').DataTable({ responsive: true });
    });
</script>

<div class="row d-flex justify-content-end mt-3 mb-3 mr-auto">
    <button class="btn-car"><i class="fa fa-user"></i> New Customer</button>
</div>

<table id="customersTable" class="table table-striped table-bordered" style="width:100%">
    <thead class="dropdown text-center">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var customer in Model.CustomerViews)
        {
        <tr>
            <td>@customer.Name</td>
            <td>@customer.Email</td>
            <td>@customer.PhoneNo</td>

            <td class="dropdown text-center">
                <button class="btn btn-blue dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Address Locations (@customer.LocationViews.Count())
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    @foreach (var location in customer.LocationViews)
                    {
                        <div class="dropdown-item">@location.Country, @location.City, @location.Street, @location.StreetNumber, @location.PostalCode</div>
                    }
                </div>
            </td>

            <td class="d-flex justify-content-around">
                <button class="btn btn-outline-dark" title="Edit"><i class="material-icons fa fa-edit"></i></button>
                <button class="btn btn-outline-danger" title="Delete"><i class="material-icons fa fa-trash"></i></button>
            </td>

        </tr>
        }
    </tbody>
</table>