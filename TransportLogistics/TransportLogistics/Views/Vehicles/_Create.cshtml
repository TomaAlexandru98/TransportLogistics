@model TransportLogistics.ViewModels.Vehicles.NewVehicleViewModel

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group maxim-width-input">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group maxim-width-input">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group maxim-width-input">
            <label asp-for="RegistrationNumber" class="control-label"></label>
            <input asp-for="RegistrationNumber" class="form-control" />
            <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
        </div>
        <div class="form-group maxim-width-input">
            <label asp-for="MaximCarryWeight" class="control-label"></label>
            <input asp-for="MaximCarryWeight" class="form-control" />
            <span asp-validation-for="MaximCarryWeight" class="text-danger"></span>
        </div>
        <div class="form-group maxim-width-input">
            <label asp-for="VIN" class="control-label"></label>
            <input asp-for="VIN" class="form-control" />
            <span asp-validation-for="VIN" class="text-danger"></span>
        </div>
    </div>
</div>  