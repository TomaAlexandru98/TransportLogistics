@model TransportLogistics.ViewModels.Vehicles.VehiclesListViewModel

<link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/Responsive-2.2.3/css/responsive.bootstrap4.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/Responsive-2.2.3/css/responsive.dataTables.min.css" />

<script type="text/javascript" src="~/lib/datatables/datatables.min.js"></script>
<script type="text/javascript" src="~/lib/datatables/Responsive-2.2.3/js/dataTables.responsive.min.js"></script>

<table id="vehiclesTabel" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Vehicle name</th>
            <th>Type</th>
            <th>Registration number</th>
            <th>Maxim carry weight</th>
            <th>VIN</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var vehicle in Model.Vehicles)
        {
            <tr id="row-to-delete-@vehicle.Id">
                <td>@vehicle.Name</td>
                <td>@vehicle.Type</td>
                <td>@vehicle.RegistrationNumber</td>
                <td>@vehicle.MaximCarryWeightKg</td>
                <td>@vehicle.VIN</td>
                <td>
                    <a id="@vehicle.Id" data-toggle="modal" data-target="#updateVehicleModal" onclick="loadUpdatePage(this.id)">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a id="@vehicle.Id" onclick="removeVehicle(id)">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
