@model TransportLogistics.ViewModels.Vehicles.VehiclesListViewModel


<table id="vehiclesTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Vehicle name</th>
            <th>Type</th>
            <th>Registration number</th>
            <th>Maxim carry weight</th>
            <th>VIN</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var vehicle in Model.Vehicles)
        {
            <tr id="row-to-delete-@vehicle.Id">
                <td>@vehicle.Name</td>
                <td>@vehicle.Type</td>
                <td>@vehicle.RegistrationNumber</td>
                <td>@vehicle.MaximCarryWeightKg</td>
                <td>@vehicle.VIN</td>
                <td>
                    <a id="@vehicle.Id" data-toggle="modal" data-target="#updateVehicleModal" onclick="loadVehicleInModal(this.id)">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a id="@vehicle.Id" data-toggle="modal" data-target="#deleteVehicleModal" onclick="sendVehicleIdToModal(this.id)">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#vehiclesTable").DataTable({ responsive: true });
        });
    </script>
    <script type="text/javascript" src="~/lib/datatables/datatables.min.js"></script>
    <script type="text/javascript" src="~/lib/datatables/Responsive-2.2.3/js/dataTables.responsive.min.js"></script>
}