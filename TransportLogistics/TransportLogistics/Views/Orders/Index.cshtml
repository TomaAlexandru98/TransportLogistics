@using TransportLogistics.ViewModels.Orders 
@{
    ViewData["Title"] = "Orders";
}

<link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/Responsive-2.2.3/css/responsive.bootstrap4.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/Responsive-2.2.3/css/responsive.dataTables.min.css" />

<div class="row d-flex justify-content-between mt-3 mb-3 mr-auto">
    <button class="btn-car ml-3" data-toggle="modal" data-target="#orderModal">Define Route <i class="fa fa-box"></i></button>
    <button class="btn-car" data-toggle="modal" data-target="#orderModal">New Order <i class="fa fa-box"></i></button>
</div>



<div id="ordersTableContainer"></div>

@section Scripts {
    <script type="text/javascript" src="~/lib/datatables/datatables.min.js"></script>
    <script type="text/javascript" src="~/lib/datatables/Responsive-2.2.3/js/dataTables.responsive.min.js"></script>
    <partial name="_ValidationScriptsPartial" />


    <script type="text/javascript">
        $(document).ready(function () {
            loadTable();
        });

        function loadTable() {
            loadServerPartialView("#ordersTableContainer", "/Orders/OrdersTable").done(function () {
                $('#ordersTable').DataTable({ responsive: true, "lengthMenu": [5, 10, 25, 50] });
            });
        }
    </script>
}

<form id="newOrderForm" method="post" asp-controller="Orders" asp-action="NewOrder"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-complete="loadTable('#newOrderModal')"
      data-ajax-update="#newOrderBody">

    @Html.AntiForgeryToken()
    <div class="modal" id="newOrderModal" tabindex="-1" role="dialog" aria-labelledby="newOrderModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title font-weight-bold" id="newOrderModalLabel">New Order</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="newOrderBody" class="modal-body">
                    @await Html.PartialAsync("_NewOrderPartial", new NewOrderViewModel { })
                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary shadow-button" data-dismiss="modal">Close</button>
                    <button id="btnSave" class="btn btn-success" type="submit" onclick="CloseModal('#newOrderModal')"> Confirm </button>
                </div>
            </div>
        </div>
    </div>
</form>