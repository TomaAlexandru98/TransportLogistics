@using TransportLogistics.Models.Customers

@model TransportLogistics.ViewModels.Orders.NewOrderViewModel
@{
    ViewData["Title"] = "Test";
}

<input type="hidden" asp-for="OrderId" />
<input type="hidden" asp-for="Status" />

<div class="form-group">
    <label asp-for="PickUpAddress"></label>
    <input asp-for="PickUpAddress" type="text" class="form-control" />
    <span class="text-danger" asp-validation-for="PickUpAddress"></span>
</div>

<div class="form-group">
    <label asp-for="DeliveryAddress"></label>
    <input asp-for="DeliveryAddress" type="text" class="form-control" />
    <span asp-validation-for="DeliveryAddress" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="Recipient"></label>
    <select asp-for="Recipient" asp-items="" class="form-control" />
    <span asp-validation-for="Recipient" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Price"></label>
    <input asp-for="Price" type="number" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
