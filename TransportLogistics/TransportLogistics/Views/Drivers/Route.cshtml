@model TransportLogistics.Model.Route
@{
    ViewData["Title"] = "Route";
}

<link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/Responsive-2.2.3/css/responsive.bootstrap4.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/Responsive-2.2.3/css/responsive.dataTables.min.css" />

@section Scripts {
    <script type="text/javascript" src="~/lib/datatables/datatables.min.js"></script>
    <script type="text/javascript" src="~/lib/datatables/Responsive-2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/jquery-cookie/jquery.cookie.min.js"></script>

}

<h1 class="message-current-table mb-3">Route details</h1>

<table id="Orders" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th style="text-align:center"><b>PickUpAddress</b></th>
            <th style="text-align:center"><b>DeliveryAddress</b></th>
            <th style="text-align:center"><b>Payment</b></th>
            <th style="text-align:center"><b>PickUpTime</b></th>
            <th style="text-align:center"><b>DeliveryTime</b></th>


        </tr>
    </thead>
    <tbody>
        @foreach(var routeEntry in Model.RouteEntries)
        {
        <tr>
            <td style="text-align:center">
                <button class="btn btn-blue dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @routeEntry.Order.PickUpAddress.StreetNumber,@routeEntry.Order.PickUpAddress.Street
                </button>
                <div class="dropdown-menu" style="padding: 0.8rem">
                    <div>@routeEntry.Order.PickUpAddress.Country</div>
                    <div>@routeEntry.Order.PickUpAddress.City</div>
                </div>

            </td>
            <td style="text-align:center">
            <button class="btn btn-blue dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @routeEntry.Order.DeliveryAddress.StreetNumber,@routeEntry.Order.DeliveryAddress.Street
            </button>
            <div class="dropdown-menu" style="padding: 0.8rem">
                <div>@routeEntry.Order.DeliveryAddress.Country</div>
                <div>@routeEntry.Order.DeliveryAddress.City</div>
            </div>

            </td>
            <td style="text-align:center">@routeEntry.Order.Price</td>
            <td style="text-align:center"> @routeEntry.Order.PickUpTime.ToShortDateString() @routeEntry.Order.PickUpTime.ToString("HH:mm")</td>
            <td style="text-align:center" >@routeEntry.Order.DeliveryTime.ToShortDateString() @routeEntry.Order.DeliveryTime.ToString("HH:mm")</td>
        </tr>
        }
    </tbody>
</table>

<script>
    
    $(document).ready(function () {
        $('#Orders').DataTable({ responsive: true, lengthMenu: [5, 10, 15] });
    })

</script>
