@model RouteViewModel;

<table id="routesTable" class="table table-striped table-bordered" style="width:100%">
    <thead class="dropdown text-center">
        <tr>
            <th>Vehicle</th>
            <th>No.Locations</th>
            <th>Actions</th>
        </tr>
    </thead>

    
    <tbody>
        @foreach (var route in Model.Routes)
        {
           
        <tr>
            <td class="dropdown text-center w-50">
                <button class="btn btn-blue dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @route.Vehicle.Name   Status: @route.Vehicle.Status   Type: @route.Vehicle.Type
                </button>
                <div class="dropdown-menu" style="padding: 0.8rem"> 
                    <div>VIN: @route.Vehicle.VIN</div>
                    <div>Plate: @route.Vehicle.RegistrationNumber</div>
                </div>
            </td>
            <td class="dropdown text-center w-25" >
                <button class="btn btn-blue dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @route.RouteEntries.Count()
                </button>
                @foreach(var order in route.RouteEntries)
                {
                <div class="dropdown-menu" style="padding: 0.8rem">
                    <div>Order: @order.Order</div>
                    <div>Type: @order.OrderType</div>

                </div>
                }
            </td>
            <td class="w-50 ">
                <div class="d-flex justify-content-sm-around">
                    <button class="btn btn-add-blue mr-3 ml-3" title="Add Order" data-toggle="modal"
                            data-target="#locationModal">
                        <i class="material-icons fa fa-plus"></i>
                    </button>
                    <button class="btn btn-outline-dark mr-3 ml-3" title="Edit" data-toggle="modal"
                            onclick="LoadUpdateCustomerView('');" data-target="#updateCustomerModal">
                        <i class="material-icons fa fa-edit"></i>
                    </button>
                    <button class="btn btn-outline-danger mr-3 ml-3" title="Delete" data-toggle="modal"
                            onclick="LoadRemoveCustomerView('');" data-target="#removeModal">
                        <i class="material-icons fa fa-trash"></i>
                    </button>
                </div>
            </td>
        </tr>
           
        }

    </tbody>
</table>